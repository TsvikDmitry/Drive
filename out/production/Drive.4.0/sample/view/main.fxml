<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.input.KeyCodeCombination?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane prefHeight="800.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.controller.MainController">
        <top><MenuBar BorderPane.alignment="CENTER">
            <menus>
                <Menu mnemonicParsing="false" text="Файл">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Закрыть">

                        </MenuItem>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Статистика">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#StatisticToday" text="Итог дня">
                            <accelerator>
                                <KeyCodeCombination alt="DOWN" code="F1" control="UP" meta="UP" shift="UP" shortcut="UP" />
                            </accelerator></MenuItem>

                        <MenuItem id="PrintCount" mnemonicParsing="false" onAction="#PrintCount" text="Счетчик принтеров">
                     <accelerator>
                        <KeyCodeCombination alt="DOWN" code="F2" control="UP" meta="UP" shift="UP" shortcut="UP" />
                     </accelerator>
                        </MenuItem>

                  <MenuItem mnemonicParsing="false" onAction="#Deal" text="Приходы/расходы">
                     <accelerator>
                        <KeyCodeCombination alt="DOWN" code="F3" control="UP" meta="UP" shift="UP" shortcut="UP" />
                     </accelerator>
                  </MenuItem>
                        
                    </items>
                </Menu>
            </menus>
        </MenuBar>
        </top></BorderPane>
